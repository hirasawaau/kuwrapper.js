{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "baseUrl": "./",
    "declaration": true
  },
  "exclude": ["**/*.spec.ts"]
}
